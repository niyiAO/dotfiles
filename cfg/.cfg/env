#!/bin/bash

export PATH="$HOME/.dotnet/tools:$HOME/.cache/npm-packages/bin:$HOME/.cfg/bin:$HOME/.cfg/pkgs/bin:$HOME/.cfg/pkgs/usr/local/bin:$HOME/.gem/ruby/2.6.0/bin:$PATH"
export EDITOR="nvim"
export TERMINAL="termite"

export NOTE_DIR=$HOME/notes
export wksp=$HOME/docs/workspace

source /usr/share/autojump/autojump.zsh

alias S="sudo"
alias i="grep -i"
alias ff="find -type f -iname"
alias la="ls -A"
alias X="xclip -sel clip -o | xargs"
alias vd="vidir"
alias nn="nnn"
alias vim="nvim"
alias subl="subl3"
alias clip="xclip -sel clip"
alias tat='tmux new -As "$PWD"'

function pan () {
	man -t "$@" | ps2pdf - | zathura - --fork
}

function bak () {
	cp "$@" "$@.bak" 
}

function termfix () {
	infocmp | ssh $@ tic -x -
}

function mk() {
	mkdir -p "$@" && cd "$@"
}

