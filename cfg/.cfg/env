#!/bin/bash

export PATH="\
$HOME/.cargo/bin:\
$HOME/.android/Sdk/tools/bin:\
$HOME/.dotnet/tools:\
$HOME/.cache/npm-packages/bin:\
$HOME/.cfg/bin:\
$HOME/.cfg/pkgs/bin:\
$HOME/.cfg/pkgs/usr/local/bin:\
$HOME/.gem/ruby/2.7.0/bin:\
/opt/jruby/bin:\
$PATH"

export EDITOR="nvim"
export TERMINAL="termite"
export MANPAGER="sh -c 'col -bx | bat -pl man'"
export NOTE_DIR=$HOME/notes
export wksp=$HOME/docs/workspace
export GOPATH=$HOME/docs/go
export ANDROID_HOME=$HOME/.android/Sdk
export FZF_DEFAULT_COMMAND='ag --hidden -g ""'
export FZF_CTRL_R_OPTS='--sort --exact'
export FZF_DEFAULT_OPTS='
    --reverse
    --height 40%
    --color fg:7,bg:-1,hl:1,fg+:232,bg+:1,hl+:255
    --color info:7,prompt:2,spinner:1,pointer:232,marker:1,gutter:-1
'
source /usr/share/autojump/autojump.zsh

alias S="sudo"
alias rm="trash"
alias i="grep -Ei"
alias ff="noglob find -type f -iname"
alias la="ls -A"
alias X="xclip -sel clip -o | xargs"
alias vd="vidir"
alias vim="nvim"
alias subl="subl3"
alias clip="xclip -sel clip"
alias tat='tmux new -As "$PWD"'
alias n=nnn
alias mmv='noglob zmv'
alias cat='bat -p'

function wk () {
	cd "$wksp/$1"
}

function pan () {
	man -t "$@" | ps2pdf - | zathura - --fork
}

function bak () {
	cp -r "$@" "$@.bak" 
}

function termfix () {
	infocmp | ssh $@ tic -x -
}

function mk() {
	mkdir -p "$@" && cd "$@"
}
