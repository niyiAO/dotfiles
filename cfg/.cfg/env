#!/bin/bash

export PATH="\
$HOME/.cargo/bin:\
$HOME/.android/Sdk/tools/bin:\
$HOME/.dotnet/tools:\
$HOME/.cache/npm-packages/bin:\
$HOME/.cfg/bin:\
$HOME/.cfg/pkgs/bin:\
$HOME/.cfg/pkgs/usr/local/bin:\
$HOME/.gem/ruby/2.7.0/bin:\
/opt/jruby/bin:\
$PATH"

export EDITOR="nvim"
export TERMINAL="termite"
export MANPAGER="sh -c 'col -bx | bat -pl man'"
export NOTE_DIR=$HOME/notes
export wksp=$HOME/docs/workspace
export GOPATH=$HOME/docs/go
export ANDROID_HOME=$HOME/.android/Sdk
source /usr/share/autojump/autojump.zsh

alias S="sudo"
alias rm="trash"
alias i="grep -Ei"
alias ff="noglob find -type f -iname"
alias la="ls -A"
alias X="xclip -sel clip -o | xargs"
alias vd="vidir"
alias vim="nvim"
alias subl="subl3"
alias clip="xclip -sel clip"
alias tat='tmux new -As "$PWD"'
alias n=nnn
alias nn='nnn -p -'
alias mmv='noglob zmv'
alias cat='bat -p'

function wk () {
	cd "$wksp/$1"
}

function nnn ()
{
	if [ -n $NNNLVL ] && [ "${NNNLVL:-0}" -ge 1 ]; then
		echo "nnn is already running"
		return
	fi

	export NNN_PLUG='e:-_nvim $nnn*;p:-_less -iR $nnn*'
	NNN_TMPFILE="${XDG_CONFIG_HOME:-$HOME/.config}/nnn/.lastd"

	/usr/bin/nnn "$@"

	if [ -f "$NNN_TMPFILE" ]; then
		. "$NNN_TMPFILE"
		rm -f "$NNN_TMPFILE" > /dev/null
	fi
}

function pan () {
	man -t "$@" | ps2pdf - | zathura - --fork
}

function bak () {
	cp -r "$@" "$@.bak" 
}

function termfix () {
	infocmp | ssh $@ tic -x -
}

function mk() {
	mkdir -p "$@" && cd "$@"
}
