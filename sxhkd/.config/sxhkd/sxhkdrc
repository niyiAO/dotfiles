super + s
	xclip -o -sel clip > ~/temp/dwnld.fifo

super + Escape
	pkill -USR1 -x sxhkd

super + d
	rofi -show drun -show-icons

super + x; {m,X,n}
	termite --class FLOATERM -e {ncmpcpp,nnn,nmtui}

super + x; {f,e,x,E}
	{firefox,subl3,thunar, termite -e nvim}

super + Print
	cd ~/media/pictures && scrot

super + slash
	~/.cfg/bin/toggle_app polybar polybar main

super + l
	dm-tool lock

super + { ,shift + } Return
	termite { ,--title scratchpad --class FLOATERM -e 'tmux new -As scratch'}

XF86Audio{RaiseVolume,LowerVolume,Mute}
	pulseaudio-ctl {up,down,mute} && bash ~/.config/dunst/notify_volume.sh

XF86MonBrightness{Up,Down}
	xbacklight -{inc,dec} 10

XF86Display
	bash ~/.cfg/bin/mul-monitors

XF86PowerOff
	rofi -modi 'powermenu:~/.cfg/bin/powermenu.sh' -show powermenu

