
super + Escape
	pkill -USR1 -x sxhkd

super + d
	rofi -show drun -show-icons

super + shift + d
	bash ~/.cfg/bin/tmux-browser.sh

super + u
	~/.cfg/bin/usage

super + x; {m,X,n}
	$TERMINAL --class FLOATERM -e {ncmpcpp,nnn -S,nmtui}

super + x; {f,F,e,x,E, p}
	{firefox, firefox --private-window,code,thunar, $TERMINAL -e nvim, mpv --player-operation-mode='pseudo-gui'}

super + x; v
	pavucontrol

super + x; P
	~/.cfg/bin/mpv-lastopen

super + Print
	cd ~/media/pictures && scrot

Print
	mpc toggle

super + slash
	~/.cfg/bin/toggle_app polybar polybar main

super + shift + slash
	~/.cfg/bin/toggle_app bspwmzen ~/.cfg/bin/bspwmzen

super + l
	dm-tool lock

super + Return
	$TERMINAL 

super + shift + Return
	tmux ls || tmux new -ds scratch && $TERMINAL --class FLOATERM -e tmux a

XF86Audio{RaiseVolume,LowerVolume,Mute}
	pulseaudio-ctl {up,down,mute} && bash ~/.config/dunst/notify_volume.sh

XF86MonBrightness{Up,Down}
	xbacklight | cut -f1 -d. | xargs -i echo 1.01 \^ \(\{\} - 100\) '*' 10 | bc -l | xargs xbacklight -{inc,dec}

XF86Display
	bash ~/.cfg/bin/mul-monitors

XF86PowerOff
	rofi -modi 'powermenu:~/.cfg/bin/powermenu.sh' -show powermenu

